<p id="notice"><%= notice %></p>

<h1>Listing Bids</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Higher or lower</th>
      <th>Winning bid</th>
      <th>Auction</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.price %></td>
        <td><%= bid.higher_or_lower %></td>
        <td><%= bid.winning_bid %></td>
        <td><%= bid.auction_id %></td>
        <td><%= bid.user_id %></td>
        <td><%= link_to 'Show', bid %></td>
        <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
        <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

