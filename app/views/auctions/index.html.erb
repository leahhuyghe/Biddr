<%= render partial: "layouts/nav" %>

<div class="container" style="margin-top: 100px;">

<p id="notice"><%= notice %></p>

<h1>Listing Auctions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Ends on</th>
      <th>Reserve price</th>
      <th>Current price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @auctions.each do |auction| %>
      <tr>
        <td><%= auction.title %></td>
        <td><%= auction.description %></td>
        <% if auction.ends_on %>
        <td>Ends On: <%= auction.ends_on %></td>
        <% end %>
        <% if auction.bids.any? %>
        <td>Current Price: $<%= auction.bids.highest_bid_so_far + 1 %></td>
          <% else %>
        <td>Current Price: No Bids Yet!</td>
      <% end %>
        <td><%= auction.reserve_price %></td>
        <td><%= auction.current_price %></td>
        <td><%= link_to 'Show', auction %></td>
        <td><%= link_to 'Edit', edit_auction_path(auction) %></td>
        <td><%= link_to 'Destroy', auction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Auction', new_auction_path %>

</div>
